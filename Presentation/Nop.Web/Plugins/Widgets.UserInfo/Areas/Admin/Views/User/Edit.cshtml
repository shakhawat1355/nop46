@using Nop.Plugin.Widgets.UserInfo.Model;

@model UserModel
@await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))


<form asp-controller="User" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">

            @T("Plugins.Widgets.Crud.EditPageTitle")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Widgets.Crud.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <a asp-controller="User" asp-action="Delete" asp-route-id=@Model.Id class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </a>
        </div>
    </div>





    <div asp-validation-summary="ModelOnly"></div>
    <input asp-for="Id" type="hidden" />

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row" id="display-name-area">
                                <div class="col-md-2">
                                    <nop-label asp-for=@Model.Name />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for=@Model.Name asp-required="true" />
                                    <span asp-validation-for=@Model.Name></span>
                                </div>
                            </div>
                            <div class="form-group row" id="">
                                <div class="col-md-2">
                                    <nop-label asp-for=@Model.DateOfBirth />
                                </div>
                                <div class="col-md-10">
                                    <nop-editor asp-for=@Model.DateOfBirth asp-required="true" />
                                    <span asp-validation-for=@Model.DateOfBirth></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-2">
                                    <nop-label asp-for=@Model.Gender />
                                </div>
                                <div class="col-md-4">
                                    <nop-select asp-for=@Model.Gender asp-items="@Model.GenderSelection" />
                                </div>
                            </div>

                            <div class="form-group row" id="">
                                <div class="col-md-2">
                                    <nop-label asp-for=@Model.Phone />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for=@Model.Phone asp-required="true" />
                                    <span asp-validation-for=@Model.Phone></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>


